<div id='clerkhead' style='width:80%;height:30px;border:1px solid #000000;text-align: center'>
	店员管理
</div>
<div class="row" style="margin-top: 9px">
          <div class="col-sm-1"></div>
          <div class="col-sm-2">
          	<input type="button" class="btn btn-primary" value='创建店员' data-toggle="modal" data-target="#myModal" />
          </div>
          <div class="col-sm-8"></div>
</div>
<table class="table table-hover" align="center">
  <caption>店员列表</caption>
  <thead>
    <tr>
      <th>角色名称</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
  	<% rs.forEach(function(item){ %>
  	<%
  		if(item.role>0){
  	%>
    <tr>
      <td><%-item.nicheng%></td>
      <td>
      	<a href='#'>修改</a>&nbsp;
      	<a href='#'>删除</a>
      </td>
    </tr>
    <% }}) %>
  </tbody>
</table>

<!-- 模态框（Modal） -->
<script>
	function onAddClerk(){
		return true;
	}
	var arr=['','服务员','后厨'];
	function roleChange(thisa){
		clerkForm.nicheng.value=arr[thisa.value];
	}
</script>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">添加店员</h4>
            </div>
            <div class="modal-body">
            	<!----------------------------------------------->
				<form class="form-horizontal" name='clerkForm' method='post' action='./addClerk' onsubmit='return onAddClerk()'>
				  <div class="form-group">
			        <label class="col-sm-3 control-label">店员类别：</label>
			        <div class="col-sm-8">
			            <select class="form-control" name='role' onchange='roleChange(this)'>
					      <option value='0'>请选择店员类别</option>
					      <option value='1'>服务员</option>
					      <option value='2'>后厨</option>
					    </select>
			        </div>
			      </div>
				  <div class="form-group">
				    <label for="firstname" class="col-sm-2 control-label">账号</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="firstname" placeholder="请输入账号" name='email'>
				    </div>
				  </div>
				  <div class="form-group">
				    <label for="lastname" class="col-sm-2 control-label">密码</label>
				    <div class="col-sm-10">
				      <input type="password" class="form-control" id="lastname" placeholder="请输入密码" name='pwd'>
				    </div>
				  </div>
				  <div class="form-group">
				    <label for="lastname" class="col-sm-2 control-label">店员身份</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="lastname" placeholder="服务员" name='nicheng'>
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default">登录</button>
				    </div>
				  </div>
				</form>

            	<!----------------------------------------------->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
